extends partials/layout

block vars
	- var title = "Trailer"
	- var sidebar_nav = "login"

block content
	.login.container
		.row
			.col
				h1.display-4.m-b-2 Welcome!

				form(method='POST' action='/register')
					div.form-group.d-flex
						label(for='name') Username
						input#name.form-control(type='text', name='name')
					div.form-group.d-flex
						label(for='pw') Password
						input#pw.form-control(type='password', name='password')
					a.login_fogot-link(href='/') Forgot your password?
					button.btn.btn-primary(type='submit') Log In
