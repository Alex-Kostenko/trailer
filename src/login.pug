extends partials/layout

block vars
	- var title = "Trailer"
	- var sidebar_nav = "login"

block content
	.login.row
		.col
			h1.display-4.m-b-2 Welcome!

			form.d-flex.flex-column.align-items-center.container(method='POST' action='/register')
				div.form-group.d-flex
					label(for='name') Username
					input#name.form-control(type='text', name='name')
				div.form-group.d-flex
					label(for='pw') Password
					input#pw.form-control(type='password', name='password')
				a.login_fogot-link.mt-3(href='/') Forgot your password?
				button.btn.btn-primary.mt-5(type='submit') Log In
				p.login_text.mt-5 Or if you are new, please
				a.login_linl-create.btn.btn-primary.mt-5 Create a New Account

