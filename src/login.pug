extends partials/layout

block vars
	- var title = "Trailer"
	- var sidebar_nav = "login"

block content
	.container.content-container
		.offset-lg-3.col-lg-9
			h1.main-header Welcome!

		form(method='POST' action='/register')
			+formGroup('input', 'text', 'name', 'Username')
			+formGroup('input', 'password', 'password', 'Password')
			.offset-md-4.offset-lg-6.offset-xl-5
				a.account-info__text(href='support.html') Forgot your password?
			.offset-md-4.offset-lg-6.offset-xl-5.col-md-3.col-lg-2.col-xl-1
				button.btn.form-group-button(type='submit') Log In
			.offset-md-4.offset-lg-6.offset-xl-5
				p.account-info__text.account-info__text Or if you are new, please
			.offset-md-4.offset-lg-6.offset-xl-5.col-md-6.col-lg-4.col-xl-2
				button.btn.form-group-button Createa New Account
