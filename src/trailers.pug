					+trailersDetailRowEdit('Tracking Number', 'tracking-number')

			button.default-btn Find


		//- Tab content Detail Create New
		div#DetailNew-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Edit Trailer Record - xxxxxxx
			.detail__wrapper
				.detail__col
					h3.detail__header Equipment Details
					+trailersDetailRowEdit('Trailer Number', 'trailer-number')
					+trailersDetailRowSelect('Make', 'make', optionsCombo)
					+trailersDetailRowSelect('Year', 'year', optionsCombo)
					+trailersDetailRowSelect('Size', 'size', optionsCombo)
					+trailersDetailRowSelect('Location', 'location', optionsCombo)
					+trailersDetailRowSelect('Condition Status', 'condition-status', optionsCombo)
					+trailersDetailRowSelect('Own', 'own', optionsCombo)
					+trailersDetailRowSelect('Business', 'business', optionsCombo)
					
				.detail__col.detail__col-grey
					h3.detail__header Registration Details
					+trailersDetailRowEdit('Vehicle Identification Number (Vin)', 'vehicle-number')
					+trailersDetailRowEdit('Platee Number', 'platee-number')
					+trailersDetailRowSelect('State Number', 'state-number', optionsCombo)
					+trailersDetailRowEdit('Title Number', 'title-number')
					.detail__row
						span Last Registration Date
						.col-lg-6.financials__date-wrapper
							input#datepicker-invoice.detail__date(name='invoice-date')
					.detail__row
						span Registration Expiration Date
						.col-lg-6.financials__date-wrapper
							input#datepicker-expiration.detail__date(name='expiration-date')
					.detail__row
						span Date Acquired
						.col-lg-6.financials__date-wrapper
							input#datepicker-acquired.detail__date(name='acquired-date')


				.detail__col
					h3.detail__header Tracking Details
					+trailersDetailRowSelect('E Tracking System', 'tracking-system', optionsCombo)
					+trailersDetailRowEdit('Tracking Number', 'tracking-number')

			button.default-btn Find


		//- Tab content Documents
		div#Documents-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Trailer Record - xxxxxxx
			.documents__col
				h3.documents__header.col Equipment Details
				+trailersDocumentsRow('Trailer Number', 'Some text')
				+trailersDocumentsRow('Vin #', 'Some text')
				+trailersDocumentsRow('License #', 'Some text')
				+trailersDocumentsRowWithButton(true, 'Inspection Document', 'View', 'Download', '#')
				+trailersDocumentsRowWithButton(true, 'FHWA', 'View', 'Download', '#')
				+trailersDocumentsRowWithButton(false, 'Registration', 'View', '', '#')
				+trailersDocumentsRowWithButton(false, 'Tracking Installation Sheet', 'View', '', '#')

				h3.documents__header.col Equipment Invoices
				p.documents__text Click the Invoice number to View the Invoice

				table.table.table-striped.documents__table
					thead
						tr
							th.fs-table(scope="col") Download Invoice
							th.fs-table(scope="col") Invoice
							th.fs-table(scope="col") Invoice Date
							th.fs-table(scope="col") Vendor
							th.fs-table(scope="col") Total Invoice
					tbody
						+trailersDocumentsTableRow(false, 'F11356', '7/25/2019', 'E&J Truck Service', '$1450')
						+trailersDocumentsTableRow(true, 'F11356', '7/25/2019', 'E&J Truck Service', '$1450')
						+trailersDocumentsTableRow(false, 'F11356', '7/25/2019', 'E&J Truck Service', '$1450')
						+trailersDocumentsTableRow(false, 'F11356', '7/25/2019', 'E&J Truck Service', '$1450')

		//- Tab content Location
		div#Location-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Edit Trailer Record - xxxxxxx
			.location__col
				h3.location__header.col Search for a Single Asset:

				+trailersLocationFormRow(true, 'Trailer Number', 'trailer-number', optionsTrailerNumber, 'Trailer number contains','trailer-number')
				+trailersLocationFormRow(true, 'Tracking unit ID №', 'trailer-unit', optionsTrailerUnit, 'Tracking unit id № contains','trailer-unit')
				+trailersLocationFormRow(false, 'Location Name', 'trailer-location', optionsLocation)
				+trailersLocationFormRow(true, 'Trailer number', 'trailer-number', optionsTrailerNumber, 'Trailer Number contains','trailer-number')

				h3.location__header.col Select Query Type:
				.location__check
					input.location__check-input(type="radio" name="showLatestPosition" id="showLatestPosition" value="option1" checked=false)
					label.location__check-label(for="showLatestPosition") Show latest position
				.location__btn-group.d-flex
					button#Map.default-btn.tab__links Display Map
					button#Table.tab__links.default-btn Display Table

		//- Tab content Location Map
		div#Map-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Edit Trailer Record - xxxxxxx
			.location__col
				div.map-responsive
					iframe(src="https://www.google.com/maps/embed/v1/view?zoom=10&center=50.4501,30.5234", width='100%' frameborder="1", allowfullscreen)
				button.btn.main-btn.location__btn Download CSV

				table.table.table-striped.location__table
					thead
						tr
							th.fs-table(scope="col") Select Trailer
							th.fs-table(scope="col") Map ID
							th.fs-table(scope="col") Trailer №
							th.fs-table(scope="col") Tracking Unit №
							th.fs-table(scope="col") Latitude
							th.fs-table(scope="col") Longitude
							th.fs-table(scope="col") Closest Landmark
							th.fs-table(scope="col") State
							th.fs-table(scope="col") Country
							th.fs-table(scope="col") Distance From Landmark
							th.fs-table(scope="col") Battery Status
					tbody
						+trailersLocationTableRow(false, [1, '1234M', 5465, 35.27555, -80.88088, 'Masuer Charlotte', 'NC', 'US', '0.13 mi', 'Excellent'])

		//- Tab content Location Table
		div#Table-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Edit Trailer Record - xxxxxxx
			.location__col
				h3.location__header.col Table

		//- Tab content Financials
		div#Financials-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header All Trailers
			.home__select-block
					+FormSelectOption('bussines',optionsBussines, 'home__select')
					+FormSelectOption('location',optionsLocation, 'home__select')
					+FormSelectOption('location',optionsTrailerNumber, 'home__select')
					

			.financials__wrapper
				.financials__col-canvas.row
						canvas#TotalLease.financials__chart
						canvas#TotalMaintenance.financials__chart
						canvas#TotalTrailers.financials__chart
				.financials__col-form.col-12.col-xl-5
					h3.financials__header Trailer Financials (YTD)
					+financialsFormRow('Total Lease Expence (All Locations)', '2500')
					+financialsFormRow('Total Maintenance Expense (All Locations)', '2500')
					+financialsFormRow('Total Trailer Count Lease & Owned (All Locations)', '2500')
			


		//- Tab content FinancialsSearch
		div#FinancialsSearch-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Search For Trailer Repair History
			
			+formGroupSearch('input', 'text', 'trailer-number', 'Enter trailer number', 'styled-input')
				.col-lg-5.col-xl-2
					button.default-btn Find
			p or
			+formGroupSearch('input', 'text', 'trailer-vin-number', 'Enter trailer vin number', 'styled-input')
				.col-lg-5.col-xl-2
					button.default-btn Find
			p or
			+formGroupSearch('input', 'text', 'trailer-tracking-number', 'Enter trailer tracking number', 'styled-input')
				.col-lg-5.col-xl-2
					button.default-btn Find

		//- Tab content FinancialsRepairHistory
		div#FinancialsRepairHistory-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Trailer Repair History
			h3.financials__header Equipment Details
			.financials__wrapper
				.col-12.col-xl-6
					+trailersDetailRow('YTD - Total Labor', '1500')
					+trailersDetailRow('YTD - Total Parts', '1500')
					+trailersDetailRow('YTD - Total Accessories', '1500')
				.col-12.col-xl-6
					+trailersDetailRow('YTD - Total Annual Inspections', '1500')
					+trailersDetailRow('YTD - Total Registrations', '1500')
					+trailersDetailRow('YTD - YTD - Total Tax', '1500')

			.location__btn-group
				button.default-btn Download Header CSV
				button.default-btn Download Line Item CSV


			table.table.table-striped.location__table
				thead
					tr
						th.fs-table(scope="col") View Invoice
						th.fs-table(scope="col") Invoice №
						th.fs-table(scope="col") Invoice Date
						th.fs-table(scope="col") Vendor
						th.fs-table(scope="col") Labar Total
						th.fs-table(scope="col") Parts Total
						th.fs-table(scope="col") Accessories Total
						th.fs-table(scope="col") Annual Inspections Total
						th.fs-table(scope="col") Registration
						th.fs-table(scope="col") Tax
						th.fs-table(scope="col") Total Invoice
				tbody
					+trailersFinancialsTableRow('#', 'F11356', ['F11356', '7/25/2019', 'E&J Truck Service', '1233', '50', '0', '0', '0', '150', '1450'])
