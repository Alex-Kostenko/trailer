extends partials/layout

block vars
	- var isAdmin = true
	- var title = "Trailer - Trailers Details"
	- var navigation = "details-home"
	- var sidebar_nav = "trailers"
	- var optionsBussines = ['Bussines1', 'Bussines2', 'Bussines3']
	- var optionsLocation = ['Location1', 'Location2', 'Location3']
	- var optionsTrailerNumber = ['TrailerNumber-1', 'TrailerNumber-2', 'TrailerNumber-3']
	- var optionsTrailerUnit = ['Unit-1', 'Unit-2', 'Unit-3']
	- var optionsVendor = ['Vendor-1', 'Vendor-2', 'Vendor-3']
	- var optionsCombo = ['Combo-1', 'Combo-2', 'Combo-3']

block content
	.container.content-container
		//- Tab links
		.tab.offset-md-1.offset-xl-3.col-lg-11.col-xl-9
			button#Home.tab__links Home
			button#Detail.tab__links Detail
			button#Documents.tab__links Documents
			button#Location.tab__links Location
			button#Financials.tab__links Financials

		.tab.tab-tmp.offset-md-1.offset-xl-3.col-lg-11.col-xl-9
			button#DetailEdit.tab__links tmp-DetailEdit
			button#DetailNew.tab__links tmp-DetailNew
			button#FinancialsSearch.tab__links tmp-FinancialsSearch
			button#FinancialsRepairHistory.tab__links tmp-FinancialsRepairHistory
			button#FinancialsRepairHistory2.tab__links tmp-FinancialsRepairHistory2
			button#FinancialsInvoice.tab__links tmp-FinancialsInvoice

		//- Tab content Home
		div#Home-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Search For a Trailer

			//- form(action="")
			+formGroupSearch('input', 'text', 'trailer-number', 'Enter trailer number', 'styled-input')
				.col-lg-5.col-xl-2
					button#Home_result.tab__links.default-btn Find
			p Or
			+formGroupSearch('input', 'text', 'trailer-vin-number', 'Enter trailer vin number', 'styled-input')
				.col-lg-5.col-xl-2
					button#Home_result.tab__links.default-btn Find
			p Or
			+formGroupSearch('input', 'text', 'trailer-tracking-number', 'Enter trailer tracking number', 'styled-input')
				.col-lg-5.col-xl-2
					button#Home_result.tab__links.default-btn Find


			h1.main-header Search For a Trailer by Locations & Business
			.home__select-block
				+FormSelectOption('bussines', optionsBussines, 'home__select')
				+FormSelectOption('location', optionsLocation, 'home__select')
				button#Home_result.tab__links.default-btn Find


		//- Tab content Home search-result
		div#Home_result-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Search Results - Business xxxxxxxx, Location xxxxxx

			.home-search__wrapper
				.col-12.col-xl-6
					h3.sub-header Refine Search For a Trailer
					+formGroupSearchResult('input', 'text', 'trailer-number', 'Enter trailer number', '')
						.col-lg-5.col-xl-3
							button#Home_result.tab__links.default-btn.home-search__result-btn Find
					p Or
					+formGroupSearchResult('input', 'text', 'trailer-vin-number', 'Enter trailer vin number', '')
						.col-lg-5.col-xl-2
							button#Home_result.tab__links.default-btn Find
					p Or
					+formGroupSearchResult('input', 'text', 'trailer-tracking-number', 'Enter trailer tracking number', '')
						.col-lg-5.col-xl-2
							button#Home_result.tab__links.default-btn Find

				.col-12.col-xl-6.home-search__col
					h3.sub-header Refine Search by Location & Business

					.home-search__block
						+FormSelectOption('bussines', optionsBussines, 'mr-1')
						+FormSelectOption('location', optionsLocation, '')
					button#Home_result.tab__links.default-btn Find

			table.table.table-striped.documents__table.w-100
				thead
					tr
						th.fs-table(scope="col") Trailer Number
						th.fs-table(scope="col") Location
						th.fs-table(scope="col") Business
						th.fs-table(scope="col") Make
						th.fs-table(scope="col") Vin
						th.fs-table(scope="col") Year
						th.fs-table(scope="col") License Plate
						th.fs-table(scope="col") Registartion
						th.fs-table(scope="col") Expiration Date
						th.fs-table(scope="col") Tracking Number
				tbody
					+trailersFinancialsTableRow('#', '405', ['Mason', 'Metals', 'Busse', 'Vin12 kal109', '2005', 'GKS 19032', '12 31/2019','12 31/2019', '1234567'])
					+trailersFinancialsTableRow('#', '405', ['Mason', 'Metals', 'Busse', 'Vin12 kal109', '2005', 'GKS 19032', '12 31/2019','12 31/2019', '1234567'])
					+trailersFinancialsTableRow('#', '405', ['Mason', 'Metals', 'Busse', 'Vin12 kal109', '2005', 'GKS 19032', '12 31/2019','12 31/2019', '1234567'])
					+trailersFinancialsTableRow('#', '405', ['Mason', 'Metals', 'Busse', 'Vin12 kal109', '2005', 'GKS 19032', '12 31/2019','12 31/2019', '1234567'])


		//- Tab content Detail
		div#Detail-container.tab__content.offset-md-1.offset-xl-3
