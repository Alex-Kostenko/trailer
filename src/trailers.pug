				.detail__col.detail__col-grey
					h3.detail__header Registration Details
					+trailersDetailRow('Vehicle Identification Number (Vin)', 'Some text')
					+trailersDetailRow('Platee Number', 'Some text')
					+trailersDetailRow('State Number', 'Some text')
					+trailersDetailRow('Title Number', 'Some text')
					+trailersDetailRow('Last Registration Date', 'Some text')
					+trailersDetailRow('Registration Expiration Date', 'Some text')
					+trailersDetailRow('Date Acquired', 'Some text')

				.detail__col
					h3.detail__header Tracking Details
					+trailersDetailRow('E Tracking System', 'Some text')
					+trailersDetailRow('Tracking Number', 'Some text')

		//- Tab content Detail Edit
		div#DetailEdit-container.tab__content.offset-md-1.offset-xl-3
			h1.main-header Edit Trailer Record - xxxxxxx
			.detail__wrapper
				.detail__col
					h3.detail__header Equipment Details
					+trailersDetailRowEdit('Trailer Number', 'trailer-number')
					+trailersDetailRowSelect('Make', 'make', optionsCombo)
					+trailersDetailRowSelect('Year', 'year', optionsCombo)
					+trailersDetailRowSelect('Size', 'size', optionsCombo)
					+trailersDetailRowSelect('Location', 'location', optionsCombo)
					+trailersDetailRowSelect('Condition Status', 'condition-status', optionsCombo)
					+trailersDetailRowSelect('Own', 'own', optionsCombo)
					+trailersDetailRowSelect('Business', 'business', optionsCombo)
					
