mixin FormSelectOption (name, options)
	select.m-2.form-control.form-block__input(name=name, id=name)
		each val, index in options
			option(value=index, selected=(index == 0))= val

mixin selectOption (name, options)
	select.m-2.form-control.form-block__input.col-12(name=name, id=name)
		each val, index in options
			option(value=index, selected=(index == 0))= val
