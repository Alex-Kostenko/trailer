mixin formRow ()
	.form-block.d-flex
		if block
			block

mixin formRowWithText ()
	.form-group.row.form-block.justify-content-left
		.col-11.col-md-4
		if block
			block
		.col-sm-3

mixin formGroup (type, typeName, name, label, options)
	.form-block.d-flex
		case type
			when 'select'
				label.form-block__label(for=name)= label
				+FormSelectOption(name, options)
				if (block)
					block

			default
				label.form-block__label(for=name)= label
				input.m-2.form-control.form-block__input(type=typeName, name=name, id=name)
				if (block)
					block

