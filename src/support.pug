extends partials/layout

block vars
	- var title = "Support"
	- var sidebar_nav = "support"

block content
	.account-info__headers.offset-md-3
		h1.main-header Account Support
	form(method='GET' action='support_confirm.html')
		+formGroup('input', 'email', 'email', 'Email Adress')
		.offset-md-3.offset-lg-5.account-info__row
			p.support-text.p-0 Type in the email address you used when you created your account to receive assistance in recovering your password
		.offset-md-3.offset-lg-5.col-md-5.col-lg-3.account-info__row
			button.btn.form-group-button Submit
